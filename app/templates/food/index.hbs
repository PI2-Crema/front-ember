<div class="col-lg-12">
  <div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
          Rações
          {{#link-to 'food.new' class="btn btn-default btn-primary"}}Cadastrar Ração{{/link-to}}
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th># ({{model.length}})</th>
                            <th>Nome</th>
                            <th>Espessura</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each model as |food|}}
                        <tr {{action 'showFood' food}}>
                            <td>{{food.id}}</td>
                            <td>{{food.name}}</td>
                            <td>{{food.thickness}}</td>
                            <td>
                              <button class="btn btn-danger btn-xs" {{action 'deleteFood' food bubbles=false}}>Delete</button>
                              <button class="btn btn-xs" {{action 'editFood' food bubbles=false}}>Editar</button>
                            </td>
                        </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  </div>
</div>
