<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Cadastro de novo tipo de Raçãos
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                      <form role="form" {{action "save" model on="submit"}}>
                          <div class="form-group">
                              <label>Nome</label>
                              {{input type="text" value=model.name class="form-control" placeholder="Nome da ração"}}
                          </div>
                          <div class="form-group">
                              <label>Expessura</label>
                              {{input type="number" step="0.01" value=model.thickness class="form-control" placeholder="Expessura da ração 1.5"}}
                          </div>
                          <button type="submit" class="btn btn-default">Submit Button</button>
                      </form>
                  </div>
        </div>
      </div>
    </div>
  </div>
</div>
