<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Configuração de Sensor
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                      <form role="form" {{action "sendData" model on="submit"}}>
                        {{#each data as |d|}}
                          <div class="row" style="padding-bottom:10px">
                           <div class="col-md-3">
                             {{input type="text" value=d.hour class="form-control" placeholder="Hora"}}
                           </div>
                           <div class="col-md-3">
                             {{input type="text" value=d.minute class="form-control" placeholder="Minuto"}}
                           </div>
                           <div class="col-md-5">
                             {{input type="text" value=d.quantity class="form-control" placeholder="Quantidade KG"}}
                           </div>
                         </div>
                        {{/each}}
                        <div class="row">
                          <button type="submit" class="btn btn-default" style="margin: 20px">Enviar</button>
                        </div>
                    </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
