<div class="col-lg-12">
  <div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
          Lotes registrados
          {{#link-to 'lots.new' class="btn btn-default btn-primary"}}Criar novo lote{{/link-to}}
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Lote ({{model.length}})</th>
                            <th>Ração</th>
                            <th>Valor</th>
                            <th>Validade</th>
                            <th>Data da Compra</th>
                            <th>Quantidade Comprada(kg)</th>
                            <th>Quantidade Atual</th>
                            <th>Final</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each model as |lot|}}
                        <tr {{action 'show' lot}}>
                            <td>{{lot.id}}</td>
                            <td>{{lot.food.name}}</td>
                            <td>{{format-money lot.price}}</td>
                            <td>{{moment-format lot.validity 'DD/MM/YYYY' allowEmpty=true}}</td>
                            <td>{{moment-format lot.buy_date 'DD/MM/YYYY' allowEmpty=true}}</td>
                            <td>{{format-number lot.quantity precision=2}} Kg</td>
                            <td>{{format-number lot.current_quantity precision=2}} Kg</td>
                            <td>
                              {{#if lot.end_date}}
                                {{moment-format lot.end_date 'DD/MM/YYYY' allowEmpty=true}}
                              {{else}}
                                Ainda não acabou
                              {{/if}}
                            </td>
                            <td>
                              <button class="btn btn-danger btn-xs" {{action 'delete' lot bubbles=false}}>Delete</button>
                              <button class="btn btn-xs" {{action 'edit' lot bubbles=false}}>Editar</button>
                            </td>
                        </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  </div>
</div>
