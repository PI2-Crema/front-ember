<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Edição de lote
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                      <form role="form" {{action "save" model.lot on="submit"}}>
                          <div class="form-group">
                              <label>Preço (R$)</label>
                              {{input type="number" step="0.01" value=model.lot.price class="form-control" placeholder="Nome da ração"}}
                          </div>
                          <div class="form-group">
                              <label>Validade</label>
                              {{pikaday-input onSelection=(action (mut model.lot.validity)) format="DD/MM/YYYY" value=model.lot.validity}}
                          </div>
                          <div class="form-group">
                              <label>Data da Compra</label>
                              {{pikaday-input onSelection=(action (mut model.lot.buy_date)) format="DD/MM/YYYY" value=model.lot.buy_date}}
                          </div>
                          <div class="form-group">
                              <label>Quantidade(kg)</label>
                              {{input type="number" step="0.01" value=model.lot.quantity class="form-control" placeholder="Nome da ração"}}
                          </div>
                          {{#power-select
                            options=model.foods
                            selected=model.lot.food
                            onchange=(action (mut model.lot.food))
                            as |food|
                          }}
                             <strong>{{food.name}}</strong>
                          {{/power-select}}
                          <button type="submit" class="btn btn-default">Atualizar</button>
                      </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
