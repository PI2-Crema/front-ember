<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Lote {{model.id}}
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                          <div class="form-group">
                              <label>Lote</label>
                              {{model.id}}
                          </div>
                          <div class="form-group">
                              <label>Ração</label>
                              {{model.food.name}} - {{model.food.thickness}} mm
                          </div>
                          <div class="form-group">
                              <label>Preço</label>
                              {{format-money model.price}}
                          </div>
                          <div class="form-group">
                              <label>Validade</label>
                              {{moment-format model.validity 'DD/MM/YYYY' allowEmpty=true}}
                          </div>
                          <div class="form-group">
                              <label>Data da compra</label>
                              {{moment-format model.buy_date 'DD/MM/YYYY' allowEmpty=true}}
                          </div>
                          <div class="form-group">
                              <label>Quantidade comprada</label>
                              {{format-number model.quantity precision=2}} Kg
                          </div>
                          <div class="form-group">
                              <label>Quantidade atual</label>
                              {{format-number model.current_quantity precision=2}} Kg
                          </div>
                          <div class="form-group">
                              <label>Data do fim</label>
                              {{#if lot.end_date}}
                                {{moment-format model.end_date 'DD/MM/YYYY' allowEmpty=true}}
                              {{else}}
                                Ainda não acabou
                              {{/if}}
                          </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
