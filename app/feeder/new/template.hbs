<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Cadastro de novo Alimentador
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                      <form role="form" {{action "save" model.feeder on="submit"}}>
                          <div class="form-group">
                              <label>Nome</label>
                              {{input type="text" value=model.feeder.nickname class="form-control" placeholder="Nome do tanque"}}
                          </div>
                          <div class="form-group">
                              <label>Tanque</label>
                              {{#power-select
                                options=model.tanks
                                selected=model.feeder.tank
                                onchange=(action (mut model.feeder.tank))
                                as |tank|
                              }}
                                 <strong>{{tank.name}}</strong>
                              {{/power-select}}
                          </div>
                          
                          <button type="submit" class="btn btn-default">Cadastrar</button>
                      </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
