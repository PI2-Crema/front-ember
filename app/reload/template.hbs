<div class="row">
  <h1 class="page-header"> Registro de recarga </h1>

  <div class="col-lg-12">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          Registrando regarca para Alimentador <b>{{model.feeder.nickname}}</b>
        </div>

        <div class="panel-body">
          <form class="form" {{action "save" model.consumption model.feeder on="submit"}}>
            <div class="form-group">
              <label for="disabledSelect">Alimentador</label>
              <input class="form-control" id="disabledInput" type="text" placeholder="{{model.feeder.nickname}}" disabled="">
            </div>
            <div class="form-group">
              <label for="disabledSelect">Lot</label>
              {{#power-select
                options=model.lots
                selected=model.consumption.lot
                onchange=(action (mut model.consumption.lot))
                as |lot|
              }}
                 <strong>Lote {{lot.id}} - {{lot.food.name}} - Quantiade Atual {{lot.current_quantity}} Kg</strong>
              {{/power-select}}
            </div>
            <div class="form-group">
              <label for="disabledSelect">Quantidade (kg)</label>
              {{input type="number" class="form-control" value=model.consumption.quantity}}
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-primary"> Registrar </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
