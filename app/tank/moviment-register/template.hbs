<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Cadastro de novo tanque
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                      <form role="form" {{action "save" model.counter model.cluster model.tank on="submit"}}>
                          <div class="form-group">
                              <label>Quantidade</label>
                              {{input type="number" step="0.01" value=model.counter.quantity class="form-control"}}
                          </div>
                          <div class="form-group">
                              <label>Tipo de Movimentação</label>
                              {{#power-select
                                options=model.types
                                selected=model.counter.clusterCounterType
                                onchange=(action (mut model.counter.clusterCounterType))
                                as |counterType|
                              }}
                                 <strong>{{counterType.description}}</strong>
                              {{/power-select}}
                          </div>

                          {{#if (eq model.counter.clusterCounterType.code 1)}}
                            <div class="form-group">
                                <label>Selecione o tanque onde foi retirado</label>
                                {{#power-select
                                  options=model.tanks
                                  selected=model.remove_tank
                                  onchange=(action (mut model.remove_tank))
                                  as |tank|
                                }}
                                   <strong>{{tank.name}}</strong>
                                {{/power-select}}
                            </div>
                          {{/if}}

                          {{#if (eq model.counter.clusterCounterType.code 3)}}
                            <div class="form-group">
                                <label>Selecione o tanque de destino</label>
                                {{#power-select
                                  options=model.tanks
                                  selected=model.add_tank
                                  onchange=(action (mut model.add_tank))
                                  as |tank|
                                }}
                                   <strong>{{tank.name}}</strong>
                                {{/power-select}}
                            </div>
                          {{/if}}

                          <button type="submit" class="btn btn-default">Cadastrar</button>
                      </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
