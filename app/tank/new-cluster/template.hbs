<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Cadastro de nova criação
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <form role="form" {{action "save" model.cluster model.tank on="submit"}}>
              <div class="form-group">
                <label>Tipo do peixe</label>
                {{#power-select
                  options=model.fishs
                  selected=model.cluster.fishType
                  onchange=(action (mut model.cluster.fishType))
                  as |fish|
                }}
                   <strong>{{fish.name}}</strong>
                {{/power-select}}
              </div>
              <div class="form-group">
                <label>Quantidade</label> {{input type="number" value=model.cluster.total class="form-control" placeholder="Nome do peixe"}}
              </div>
              <div class="form-group">
                <label>Peso na estocagem (Kg)</label> {{input type="number" step="0.01" value=model.cluster.initialWeight class="form-control" placeholder=""}}
              </div>

              <button type="submit" class="btn btn-default">Criar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
