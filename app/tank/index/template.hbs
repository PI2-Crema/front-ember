<div class="col-lg-12">
  <div class="row">
    <div class="panel panel-default">
        <div class="panel-heading panel-action-inline">
          Tanques registrados
          {{link-to 'Novo Tanque' 'tank.new' class="btn btn-default btn-primary"}}
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Tanque ({{model.length}})</th>
                            <th>Nome</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each model as |tank|}}
                        <tr>
                            <td>{{tank.id}}</td>
                            <td>{{tank.name}}</td>
                            <td>
                              {{#link-to 'tank.show' tank.id class="btn btn-default btn-xs"}}Ver{{/link-to}}
                              {{#link-to 'tank.edit' tank.id class="btn btn-default btn-xs"}}Editar{{/link-to}}
                              <button class="btn btn-default btn-xs btn-danger" {{action 'delete' tank bubbles=false}}>Delete</button>
                            </td>
                        </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  </div>
</div>
