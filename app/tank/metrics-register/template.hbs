<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Cadastro de novo tanque
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                      <form role="form" {{action "save" model.metric model.cluster model.tank model on="submit"}}>
                          <div class="form-group">
                              <label>Peso m√©dio (Kg)</label>
                              {{input type="number" step="0.01" value=model.metric.weight class="form-control" placeholder="Nome do tanque"}}
                          </div>
                          <div class="form-group">
                              <label>Comprimento (Cm)</label>
                              {{input type="number" step="0.01" value=model.metric.length class="form-control" placeholder="Nome do tanque"}}
                          </div>
                          <button type="submit" class="btn btn-default">Cadastrar</button>
                      </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
