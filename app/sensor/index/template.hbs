<div class="col-lg-12">
  <div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
          Sensores registrados
          {{#link-to 'sensor.new' class="btn btn-default btn-primary"}}Criar novo Sensor{{/link-to}}
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Sensor ({{model.length}})</th>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Escala</th>
                            <th>Status</th>
                            <th>Alimentador</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each model as |sensor|}}
                        <tr>
                            <td>{{sensor.id}}</td>
                            <td>{{sensor.name}}</td>
                            <td>{{sensor.description}}</td>
                            <td>{{sensor.scale}}</td>
                            <td>
                              {{#if sensor.isWorking}}
                                Funcionando!
                              {{else}}
                                Sensor com defeito. Data de registro de falha: {{moment-format sensor.failRegistration 'DD/MM/YYYY' allowEmpty=true}}
                              {{/if}}
                            </td>
                            <td>{{sensor.feeder.nickname}}</td>
                            <td style="text-align: center">
                              {{#link-to 'sensor.show' sensor class="btn btn-default btn-xs"}}Ver{{/link-to}}
                              {{#link-to 'sensor.edit' sensor.id class="btn btn-default btn-xs"}}Editar{{/link-to}}
                              <button class="btn btn-default btn-xs btn-danger" {{action 'delete' sensor bubbles=false}}>Delete</button>
                              <button type="button" {{action 'generateData' sensor.id bubbles=false}} name="button" class="btn btn-default btn-xs">Gerar Data</button>
                            </td>
                        </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  </div>
</div>
