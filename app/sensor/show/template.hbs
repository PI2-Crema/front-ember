<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Sensor {{model.id}}
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label>Sensor</label> {{model.id}}
            </div>
            <div class="form-group">
              <label>Descrição</label> {{model.description}}
            </div>
            <div class="form-group">
              <label>scale</label> {{model.scale}}
            </div>
            <div class="form-group">
              <label>Status</label>
              {{#if sensor.isWorking}}
                Funcionando!
              {{else}}
                Sensor com defeito. Data de registro de falha: {{moment-format sensor.failRegistration 'DD/MM/YYYY' allowEmpty=true}}
              {{/if}}
            </div>
            <div class="form-group">
              <label>Alimentador</label> {{model.feeder.nickname}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Registros para o sensor
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            {{sensor-chart targetID=model.id}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
