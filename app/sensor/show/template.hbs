<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Sensor {{model.id}}
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                          <div class="form-group">
                              <label>Sensor</label>
                              {{model.id}}
                          </div>
                          <div class="form-group">
                              <label>Descrição</label>
                              {{model.description}}
                          </div>
                          <div class="form-group">
                              <label>scale</label>
                              {{model.scale}}
                          </div>
                          <div class="form-group">
                            <label>Status</label>
                            {{#if sensor.isWorking}}
                              Funcionando!
                            {{else}}
                              Sensor com defeito. Data de registro de falha: {{moment-format sensor.failRegistration 'DD/MM/YYYY' allowEmpty=true}}
                            {{/if}}
                          </div>
                          <div class="form-group">
                              <label>Alimentador</label>
                              {{model.feeder.nickname}}
                          </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              Registros para o sensor
          </div>
          <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                    {{!-- {{#each model.sensorRecord as |register|}}
                          <div class="form-group">
                              {{format-number register.value precision=2}} - {{moment-format register.createdAt 'DD/MM/YYYY - h:mm:ss a' allowEmpty=true}}
                          </div>
                    {{/each}} --}}

                  {{sensor-chart}}
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
