<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Informações do sensor
      </div>
      <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Escala</th>
                        <th>Status</th>
                        <th>Alimentador</th>
                    </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>{{model.name}}</td>
                    <td>{{model.description}}</td>
                    <td>{{model.scale}}</td>
                    <td>
                      {{#if sensor.isWorking}}
                        Funcionando!
                      {{else}}
                        Sensor com defeito. Data de registro de falha: {{moment-format sensor.failRegistration 'DD/MM/YYYY' allowEmpty=true}}
                      {{/if}}
                    </td>
                    <td>
                      {{model.feeder.nickname}}
                    </td>
                  </tr>
                </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Dados históricos
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            {{sensor-chart targetID=model.id title='Gráfico do sensor'}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Erros registrados
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Número do Erro</th>
                            <th>Descrição</th>
                            <th>Registro</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each model.sensorErrors as |error|}}
                        <tr>
                            <td>{{error.error}}</td>
                            <td>{{error.description}}</td>
                            <td>{{moment-format error.createdAt 'DD/MM/YY HH:mm' allowEmpty=true }}</td>
                        </tr>
                      {{else}}
                      <tr>
                        <td></td>
                        <td>Nenhum error registrado!</td>
                        <td></td>
                      </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
