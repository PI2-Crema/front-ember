<div class="col-lg-12">
  <div class="row">
    <div class="panel panel-default">
        <div class="panel-heading panel-action-inline">
          Tipos de peixe registrados
          {{#link-to 'fish.new' class="btn btn-default btn-primary"}}Criar novo tipo{{/link-to}}
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Peixe</th>
                            <th>Nome</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#each model as |fish|}}
                        <tr>
                            <td>{{fish.id}}</td>
                            <td>{{fish.name}}</td>
                            <td style="text-align: center">
                              {{#link-to 'fish.show' fish class="btn btn-default btn-xs"}}Ver{{/link-to}}
                              {{#link-to 'fish.edit' fish.id class="btn btn-default btn-xs"}}Editar{{/link-to}}
                              <button class="btn btn-default btn-xs btn-danger" {{action 'delete' fish bubbles=false}}>Delete</button>
                            </td>
                        </tr>
                      {{else}}
                        <td>
                            {{no-data}}
                        </td>
                      {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
  </div>
</div>
