<div class="col-lg-4 col-md-6 col-sm-12">
    <div class="panel {{panelType}} panel--selectable">
        <div class="panel-heading" {{action 'show'}}>
            <b>
              {{#if feeder.nickname}}
                {{feeder.nickname}}
              {{else}}
                Sem nome
              {{/if}}
            </b> - Nível de ração: <b>{{parse-nivel feeder.nivel}}</b>
        </div>
        <div class="panel-body">
          <div class="form-group" style="margin: 0">
              {{#if feeder.needSetup}}
                Configure esse alimentador
              {{else}}
                Tanque:
                <label>{{feeder.tank.name}}</label>
              {{/if}}
          </div>
        </div>
        <div class="panel-footer footer-actions">
            {{#link-to 'feeder.edit' feeder.id class="btn btn-default btn-xs"}}
              {{b-icon name='glyphicon-cog'}}
            {{/link-to}}
            <button class="btn btn-default btn-xs btn-danger" {{action 'delete' feeder bubbles=false}}>
              {{b-icon name='glyphicon-trash'}}
            </button>
        </div>
    </div>
</div>
